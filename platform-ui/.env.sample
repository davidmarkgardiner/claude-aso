# Platform UI Environment Configuration
# Copy this file to .env.local for development

# ==============================================
# API Configuration
# ==============================================
VITE_API_URL=http://localhost:3000
VITE_ENVIRONMENT=development

# ==============================================
# Authentication Configuration
# ==============================================
VITE_AUTH_ENABLED=true
VITE_OAUTH_CLIENT_ID=your-azure-client-id-here
VITE_OAUTH_TENANT_ID=your-azure-tenant-id-here
VITE_OAUTH_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
VITE_OAUTH_REDIRECT_URI=http://localhost:5173

# ==============================================
# Feature Flags
# ==============================================
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_COST_TRACKING=true
VITE_DEBUG_MODE=true

# ==============================================
# Monitoring Configuration
# ==============================================
VITE_ENABLE_METRICS=false
VITE_ENABLE_TRACING=false

# ==============================================
# Build Configuration
# ==============================================
# VITE_BUILD_VERSION=1.0.0
# VITE_BUILD_DATE=2024-01-01

# ==============================================
# Security Headers (handled by nginx in production)
# ==============================================
# These are documented here but handled by nginx.conf
# VITE_CSP_POLICY=default-src 'self'
# VITE_ENABLE_HTTPS_REDIRECT=true